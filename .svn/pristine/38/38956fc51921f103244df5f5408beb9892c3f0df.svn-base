<!DOCTYPE html>
<html lang="en">
<head>
<!-- 创先争优模板 -->
<meta charset="UTF-8">
<title>${channel.title!channel.name} - ${site.name}</title>
<meta http-equiv="X-UA-Compatible" content="IE=edge" ></meta>
<script src="${base}/r/cms/www/risen/script/jquery1.42.min.js"></script>
<script src="${base}/r/cms/www/risen/script/jquery.SuperSlide.2.1.1.js"></script>
<script src="${base}/r/cms/www/risen/script/jquery.carousel-1.1.js"></script>
<script src="${base}/r/cms/www/risen/script/jquery.mousewheel.min.js"></script>
<script src="${base}/r/cms/www/risen/script/jquery.cxscroll.js"></script>
<link type="text/css" rel="stylesheet" href="${base}/r/cms/www/risen/css/css.css">
<link type="text/css" rel="stylesheet" href="${base}/r/cms/www/risen/css/list.css">
</head>
<body>

[#include "../include/header.html"/]

<div class="coen" id="container">
	<div class="content">
    	<div class="slideTxtBox" id="conter">
    		<div class="" id="ji_list">
        		<div class="list_ym2">
         		[@cms_channel_list parentId=channel.id]
              		[#list tag_list as c]
		     			<div class="ym_top"><span>${c.name!}</span><a href="${c.url!}"><img src="${base}/r/cms/www/risen/images/15.png" alt=""></a></div>
		             	[@cms_content_list count='3' orderBy='4' channelId=c.id channelOption='2' dateFormat='yyyy-MM-dd' currPageClass="currPageClass" norPageClass="norPageClass"]
		             	<div class="ym_tu" style="height:180px">
		                	<ul>
		        			[#list tag_list as a]
		                   		<li><a href="${a.url!}" target="_blank" title="${a.title!}">[@text_cut s=a.title len=45 append=append/]</a><span>${a.date?string(dateFormat)}</span></li>
		                   	[/#list]
		              		</ul>
		            	</div>
		           		[/@cms_content_list]
               		[/#list]
                [/@cms_channel_list]
         		</div>
				
			</div>	
		</div>
	</div>
</div>

[#include "../include/footer.html"/]

</body>
</html>