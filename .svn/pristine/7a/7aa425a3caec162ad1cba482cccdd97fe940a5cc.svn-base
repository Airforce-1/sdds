	<@p.column align="center" code="操作" style="width:94px;">
		<a href="javascript:deletethis(${risenIntegralRecord.risenirUuid!''})">删除</a><span> | </span>
		<a href="javascript:caina(${risenIntegralRecord.risenirUuid!''})">修改分数</a>
