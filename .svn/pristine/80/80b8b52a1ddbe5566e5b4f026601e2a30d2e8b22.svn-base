    <script>
		var uid = "";
        $(function(){
            $(".shiy select").change(function(){
                 var shy = $(".shiy option:selected").val();
                 switch(shy)
                 {
                    case 'partymember':
                      $(".yrle ul").hide();
                      $(".yer1").show();
                      break;
                    case 'jobing':
                      $(".yrle ul").hide();
                      $(".yer2").show();
                      break;
                    case 'worker':
                      $(".yrle ul").hide();
                      $(".yer3").show();
                      break;
                    case 'retired':
                      $(".yrle ul").hide();
                      $(".yer4").show();
                      break;
                    default:
                 };
                 $("#dues").val("");
            });
            
            $("#qice").click(function(){
                 $(".yrle li input").val("");
                 $("#dues").val(0.00);
            });
            
            var mze = $(".yrle input");
            for(i=0;i<mze.length;i++){
                 $(".yrle input:eq("+i+")").addClass("idnaz"+i);
            }
			$(".yrle input").click(function(){
                   uid = $(this).attr("class");
            });
		    $(".number input").click(function(){
                  if(uid == ""){
                      alert("请先选择需要输入的表框");
                  }
                  var value = $("." + uid).val();
                  if(value == ""){
                      $("." + uid).val($(this).val());
                  }else{
                      $("." + uid).val(value + $(this).val());
                  };
             
            });
            $(".yrle input").attr("placeholder","请输入金额")
			$(".yrle input:last(input)").attr("placeholder","0.00")
        });
    </script>
